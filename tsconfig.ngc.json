{
  "extends": "./tsconfig.json",
  // "compileOnSave": false,
  // "buildOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "rootDir": "./tmp",
    "lib": [
      "dom",
      "es2015"
    ],
    "types": [
      "hammerjs",
      "node"
    ]
  },
  "include": [
    "tmp/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}