{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "es6"
    ],
    "typeRoots": [
      "node_modules/@types/"
    ]
  },
  "include": [
    "tmp-src/**/*.ts"
  ],

  "exclude": [
    "node_modules/**/*",
    "tmp-src/test.ts",
    "tmp-src/**/*.spec.ts",
    "tmp-src/**/*.d.ts",
    "tmp-src/*-aot.ts",
    "tmp-src/main.ts",
    "tmp-src/polyfills.ts"
  ],
  "angularCompilerOptions": {
    "genDir": ".",
    "entryModule": "app/app.module#AppModule",
    "skipMetadataEmit": true
  }
}
